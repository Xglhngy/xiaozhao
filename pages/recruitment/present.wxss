.wrapper{
  width: 94%;
  margin-left: 3%;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #e0e0e0;
  margin-bottom: 60rpx;
  padding-bottom: 30rpx;
}
/* 每一行样式 */
.line{
  width: 100%;
  height: 120rpx;
  padding:30rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color:#666;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-top: 1px solid #f0f0f0;
}
/* 文字 */
.line text{
  width: 160rpx;
  text-align: left;
  font-weight: 550;
}
/* 标题 */
.title{
  width: 100%;
  height: 150rpx;
  padding:30rpx;
  box-sizing: border-box;
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: 550;
  color:#666;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}
/* 图标 */
.tpic{
  height:46rpx;
  width: 45rpx;
  margin-right:30rpx;
}
/* 输入框 */
input{
  margin-left: 30rpx;
  padding-left:30rpx; 
}
/* 单选安扭 */
.radio{
  margin-right: 140rpx;
  font-weight: 550rpx;
}
.radio text{
  margin-right: 60rpx;
}
/* 多行的行样式 */
.lines{
  width: 100%;
  padding:30rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color:#666;
  box-sizing: border-box;
  border-top: 1px solid #f0f0f0;
}
.lines view{
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 550;
}
/* 多文本样式 */
.lines textarea{
  padding: 20rpx;
}
.last{
  border-bottom: 1px solid #f0f0f0;
}
.btn{
  border:none;
  width: 60%;
  margin-left:20%;
  height:80rpx;
  line-height: 80rpx;
  margin-top:20rpx;
  text-align: center;
  color:white;
  background: #93A1EA;
  border-radius: 20rpx;
}
/* 邮箱 */
.email{
  border-bottom: 1px solid #f0f0f0;
}
/* 增加安扭 */
.add{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  margin-left: 100rpx;
}
.select{
  width: 90%;
  margin-left: 5%;
  box-sizing: border-box;
  border:1px solid #e0e0e0;
}
.select .selectline{
  width: 100%;
  height: 120rpx;
  padding:30rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color:#666;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-top: 1px solid #f0f0f0;
}
.selectline text{
  width: 160rpx;
  text-align: left;
  font-weight: 550;
}
.reduce{
  width: 55rpx;
  height: 55rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.zssq{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.zssq image{
  width: 50rpx;
  height: 50rpx;
}