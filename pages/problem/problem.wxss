@import "../../wxParse/wxParse.wxss";
page{
  background:#f0f0f0;
  /* overflow: hidden; */
}
.message{
  width: 94%;
  margin-left:3%;
  padding-top:40rpx;
  padding-bottom:40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  background:white;
  border-radius: 20rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
.listdata{
  border-bottom:1px solid #f0f0f0;
  border-top:1px solid #f0f0f0;
  padding-bottom: 50rpx;
  box-sizing: border-box;
}
.ask{
  width:96%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: top; 
  font-size: 30rpx;
  color:#666;
  margin-top: 50rpx;
  overflow: visible;
}
.ask text{
  width: 100rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  display: inline-block;
}
.ask view{
  font-size: 30rpx;
  color:#666;
  line-height: 45rpx;
  text-align: left;
  white-space:wrap;
  width:80%;
}
.askimg{
  width: 50rpx;
  height:50rpx;
  margin-right:20rpx; 
  margin-top: -5rpx;
  display: block;
}
.answer{
  width:96%;
  font-size: 30rpx;
  line-height: 45rpx;
  color:#666;
  margin-top: 20rpx;
  overflow: visible;
}
.answer text{
  width: 100rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  display: inline-block;
}
.answer>view{
  width: 100%;
  line-height: 45rpx;
  text-align: left;
  display: block;
  box-sizing: border-box;
  padding: 20rpx;
  padding-left: 90rpx;
  padding-right: 40rpx;
  color:#999;
  font-size: 30rpx;
  white-space:wrap;
}
.answerimg{
  width: 50rpx;
  height:50rpx;
  margin-right:20rpx; 
  display: inline-block;
  margin-top: -5rpx;
}

